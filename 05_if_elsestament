var isRoadBlocked = false;
if(isRoadBlocked){
    console.log(`Traveling thru express way`);
    console.log(`Travel will be short just for 2 hrs`);
    
}else{
    console.log(`Traveling thru tunnel`);
    console.log(`Travel will be long just for 5 hrs`);
}
